<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".presentation.screens.splash.SplashPageFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splash_screen_up"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/mental_help" />

    <ImageView
        android:id="@+id/splash_screen_down"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/ushelp_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_screen_up" />

</androidx.constraintlayout.widget.ConstraintLayout>